{% style %}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
    --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
    --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    --color-link: var(--color-foreground);
    --color-border: var(--color-foreground);
    --color-heading: var(--color-foreground);
    --color-button-background: {{ section.settings.colors_button_background.red }}, {{ section.settings.colors_button_background.green }}, {{ section.settings.colors_button_background.blue }};
    --color-button-text: {{ section.settings.colors_button_label.red }}, {{ section.settings.colors_button_label.green }}, {{ section.settings.colors_button_label.blue }};
    --color-button-border: var(--color-button-background);
    --color-shadow: var(--color-foreground);
  }

  #shopify-section-{{ section.id }} {
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
    background: var(--gradient-background);
  }

  .icons-with-text {
    display: grid;
    grid-template-areas:
      "top-left top-right"
      "bottom-left bottom-right";
    gap: 2rem;
    justify-content: space-around;
    align-items: center;
    max-width:var(--page-width);
    margin:0 auto;
    min-height:60rem;
    position: relative;
    text-align: center;
  }

  .icons-with-text .icon {
    width: 200px;
    height: auto;
    overflow: hidden;
  }

  .icon1,.icon2{
      margin-right:4rem;
  }
  .icon3,.icon4{
       margin-left:4rem;
  }

  .icons-with-text .icon img {
    width: 100%;
    height: 100%;
    display: block;
  }

  .icons-with-text .content {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 500px;
    color: rgb(var(--color-foreground));
    z-index: 2;
  }

  .icons-with-text .content h2 {
    margin-bottom: 12px;
  }
  /* edited
  .icons-with-text .content p {
    margin-bottom: 20px;
    font-size: 16px;
  } */

  /* .icons-with-text .content a {
    display: inline-block;
    background-color: rgb(var(--color-button-background));
    color: rgb(var(--color-button-text));
  } */

  /* Responsive Layout */
  @media (max-width: 749px) {
    .icons-with-text {
      grid-template-areas:
        "top-left top-right"
        "content content"
        "bottom-left bottom-right";
      grid-template-columns: 1fr 1fr;
      gap: 0.5rem;
      height: auto;
      overflow-x: hidden;
    }

    .icon1, .icon2, .icon3, .icon4 {
      grid-area: unset;
      width: 100%;
      max-width: 140px;
      margin: 0 auto;
    }

    .icons-with-text .icon img {
      width: 100%;
      height: auto;
    }

    .icons-with-text .content {
      grid-area: content;
      position: static;
      transform: none;
      margin: 0 auto;
      max-width: 90%;
    }
  }
{% endstyle %}

<div class="icons-with-text">
  <div class="icon icon1" style="grid-area: top-left;">
    {% if section.settings.icon_1 %}
      <img src="{{ section.settings.icon_1 | image_url: width: 300 }}" loading="lazy" alt="">
    {% endif %}
  </div>

  <div class="icon icon2" style="grid-area: top-right;">
    {% if section.settings.icon_2 %}
      <img src="{{ section.settings.icon_2 | image_url: width: 300 }}" loading="lazy" alt="">
    {% endif %}
  </div>

  <div class="content">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a
        href="javascript:void(0);"
        class="button button--primary reveal-button"
        data-target=".reveal-target"
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

  <div class="icon icon3" style="grid-area: bottom-left;">
    {% if section.settings.icon_3 %}
      <img src="{{ section.settings.icon_3 | image_url: width: 300 }}" loading="lazy" alt="">
    {% endif %}
  </div>

  <div class="icon icon4" style="grid-area: bottom-right;">
    {% if section.settings.icon_4 %}
      <img src="{{ section.settings.icon_4 | image_url: width: 300 }}" loading="lazy" alt="">
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const revealButtons = document.querySelectorAll('.reveal-button');

    revealButtons.forEach(function (button) {
      button.addEventListener('click', function () {
        const currentSection = button.closest('.shopify-section');
        const targetSelector = button.getAttribute('data-target');
        const targetSection = document.querySelector(targetSelector);

        if (currentSection) {
          currentSection.style.display = 'none';
        }

        if (targetSection) {
          targetSection.style.display = 'block';
          const targetRect = targetSection.getBoundingClientRect();
          const isInView =
            targetRect.top >= 0 && targetRect.bottom <= (window.innerHeight || document.documentElement.clientHeight);

          if (!isInView) {
            targetSection.scrollIntoView({ behavior: 'smooth' });
          }
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "Icons with Text",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon_1",
      "label": "Top Left Icon"
    },
    {
      "type": "image_picker",
      "id": "icon_2",
      "label": "Top Right Icon"
    },
    {
      "type": "image_picker",
      "id": "icon_3",
      "label": "Bottom Left Icon"
    },
    {
      "type": "image_picker",
      "id": "icon_4",
      "label": "Bottom Right Icon"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore weight loss plans."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Learn about treatment options based on your goals, habits, and health history."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Continue"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "colors_background",
      "label": "Background Color",
      "default": "#f7f7fc"
    },
    {
      "type": "color",
      "id": "colors_text",
      "label": "Text Color",
      "default": "#1c1c1c"
    },
    {
      "type": "color",
      "id": "colors_button_background",
      "label": "Button Background Color",
      "default": "#000040"
    },
    {
      "type": "color",
      "id": "colors_button_label",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color_background",
      "id": "gradient_background",
      "label": "Gradient Background"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 60,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Icons with Text"
    }
  ]
}
{% endschema %}
